                    android:id="@+id/ctv4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/ctv5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/ctv6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
