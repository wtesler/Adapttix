                    android:id="@+id/ctv2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

